{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "extends": "strongloop",
    "rules": {
        "dot-notation": [2, {"allowPattern": "^[a-z]+(_[a-z]+)+$"}],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "max-len": 0,
        "no-var": "error",
        "no-unused-vars": [0, { "varsIgnorePattern": "^h$" }],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": ["error", "never"],
        "brace-style": ["error", "stroustrup"]
    }
}
